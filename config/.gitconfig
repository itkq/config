[user]
  name = Takuya Kosugiyama
  email = kuogsi@gmail.com
[includeIf "gitdir:~/src/ghe.ckpd.co/"]
  path = ~/.gitconfig_ckpd
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
  filemode = true
  pager = less -r
[alias]
  co = checkout
  st = status -sb
  pr = pull --rebase
  fo = fetch origin
  ro = rebase origin
  rc = rebase --continue
  wd = diff --word-diff
  gp = grep -n
  lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
[init]
  templatedir = ~/.git-template
[push]
	default = simple
[branch]
	autosetuprebase = always
[pull]
  rebase = true
[ghq]
  root = ~/src
[url "git@github.com:"]
  pushInsteadOf = https://github.com/
  pushInsteadOf = git://github.com/
[url "git@gist.github.com:"]
  pushInsteadOf = https://gist.github.com/
  pushInsteadOf = git://gist.github.com/
